<Page
    x:Class="APP.View.MakeQusition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:APP.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBox PlaceholderText="问题描述" x:Name="QusitionDescribe" Grid.Row="0" BorderBrush="Gray">

        </TextBox>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="SelectLabels" Content="添加标签" Click="SelectLabels_Click"></Button>
            <GridView>
                <!--指定用户选定的标签-->
            </GridView>

        </StackPanel>
        <TextBox PlaceholderText="问题详细描述" Grid.Row="2" BorderBrush="Gray" x:Name="Qusitiondetail">
        </TextBox>
        <TextBlock x:Name="issucc" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">

        </TextBlock>
        <Button x:Name="Submit" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Stretch" Content=" 提交 " Width="100" Background="White" Click="Submit_Click"></Button>
    </Grid>

</Page>
