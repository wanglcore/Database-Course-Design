<Page
    x:Class="APP.View.MakeAnswer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:APP.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="MyAnswer" Grid.Row="0" TextWrapping="Wrap" AcceptsReturn="True">
        </TextBox>
        <StackPanel Grid.Row="1">
            <TextBlock x:Name="issucc" VerticalAlignment="Stretch" FontSize="20" />
            <Button x:Name="SubAnswer" FontSize="20" HorizontalAlignment="Right" Content="提交回答" VerticalAlignment="Stretch" Click="SubAnswer_Click" />
        </StackPanel>
    </Grid>

</Page>
